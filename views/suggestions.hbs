<main class="min-w-full opacity-80 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
    style="background-image: url(/img/background-whiteflower.jpg);">
    <div class="py-8"></div>
    <div class="w-full sm:w-auto m-14 p-7 bg-black bg-opacity-80 flex flex-row flex-wrap">
        <div class="w-6/12 pr-1 sm:min-w-max flex-1 flex-shrink-0">

            <header class="">
                <h1 class="sm:text-4xl pb-0 sm:pb-8">Suggestion Submissions</h1>
            </header>
            <section class="form bg-white bg-opacity-20 p-8 py-8 w-auto">
                <form>
                    <div class="mb-4 form-group">
                        <label for="suggestion" class="w-4/12 inline-block" id="listbox-label">What would you like to make a suggestion for?</label>
                            <select name="room" id="room" class="width-auto inline-block form-select block mt-1 text-black p-1" placeholder="Choose room...">
                                <option class="text-black pl-1" value="" disabled selected>Choose subject...</option>
                                <option value="Philosophy Chat" class="text-black pl-1">Philosopher</option>
                                <option value="Philosophy Chat" class="text-black pl-1">Quote</option>
                                <option value="Philosophy Chat" class="text-black pl-1">Daily Question</option>
                            </select>
                    </div>
                    <div class="form-group mb-4" id="otherFieldDiv">
                        <label for="phil-name" class="w-4/12 inline-block" >Philosopher Name:</label>
                        <input class="text-black p-1" type="text" name="phil-name" id="phil-name" placeholder="Enter philosopher name..." required/>
                    </div>
                    <div class="form-group mb-4" id="otherFieldGroupDiv">
                        <div class="col-6">
                            <label for="otherField1">Group: Heres One!</label>
                            <input type="text" class="form-control w-100" id="otherField1">
                        </div>
                        <div class="col-6">
                            <label for="otherField2">Group: Another One!</label>
                            <input type="text" class="form-control w-100" id="otherField2">
                        </div>
                    </div>








                    <span class="w-8/12 inline-block text-right " style="display: contents;"><button id="suggestion" type="submit" class="text-white rounded-md px-3  border-white border-2 border-solid whitespace-nowrap w-auto md:w-3/12 min-w-min" style="background-color:#4d83a3; width: 100%; align-items: center;">Submit</button></span>
                </form>
            </section>
        </div>
    </div>
</main>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $("#myselect").on("change", function() {
        $("#" + $(this).val()).show().siblings().hide();
    });
</script>
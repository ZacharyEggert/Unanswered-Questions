<main class="p-7 pt-20 bg-black bg-opacity-80 flex flex-column justify-center w-screen min-h-screen">
    <!--  qotd card  -->
    <div class="">
        <h1>Daily Question</h1>
        <h2>{{daily_question.question}}</h2>


    </div>


    <!--  commment section  -->
    <div class='m-14 p-7 bg-black bg-opacity-80 flex flex-column '>
        <h3 class='flex-1'>Comments</h3>
        <!--  each comments as comment card  -->
        {{#each daily_question.comments as |comment|}}
        <div>
            <h3>{{comment.user.user_name}}</h3>
            <p>{{comment.comment}}</p>

        </div>
        {{/each}}


        <!--  submit comment   -->
        {{#if loggedIn}}
        <!--comment input -->
        <div class=''>
            <h4>Join the discussion</h4>

            <input id="comment" type="text"><button id="submit" data-userid={{currentUserId}}
                data-dq={{daily_question.id}}>Submit</button>

        </div>
        {{else}}
        <!-- link to the login page -->
        <div class="flex flex-1 flex-column justify-center align-center">
            <h4 class='flex-1'>Log in to join the discussion.</h4>

            <a class='flex-1' href="/login">
                <button class=' min-w-max' type="submit">Log in</button>
            </a>

        </div>
        {{/if}}

    </div>
</main>
<script src="/js/qotd.js"></script>